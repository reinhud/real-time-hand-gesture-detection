// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "Real Time Hand Gesture Detection",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		"dockerfile": "../Dockerfile",
		// Use development stage.
		"target": "development",
	},
	// Uncomment to ctivate GPU usage as additional container specific runtime settings.
	"runArgs": [
		"--gpus",
		"all"
	],
	// Run startup script after the container is created.
	"postCreateCommand": "sh start.sh",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				// General
				"ms-azuretools.vscode-docker",
				"ms-vscode.makefile-tools",
				// Code completion and AI
				"GitHub.copilot",
				"GitHub.copilot-chat",
				// Code formatting and linting
				"ms-python.python",
				"ms-python.flake8",
				"ms-python.isort",
				"ms-python.black-formatter",
				// Project management
				"Gruntfuggly.todo-tree",
				"eamodio.gitlens",
				// Jupyter notebook
				"ms-toolsai.jupyter",
				// Make setup prettier:)
				"oderwat.indent-rainbow",
				"vscode-icons-team.vscode-icons"
			],
			"settings": {
				"python.testing.pytestEnabled": true,
				// Code formatting and linting
				"autoDocstring.docstringFormat": "google",
				"python.formatting.provider": "black",
				"editor.formatOnSave": false, // enable per language
				"[python]": {
					"editor.codeActionsOnSave": {
						"source.organizeImports": true,
						"source.fixAll": true,
						"source.formatOnSave": true
					},
					"files.trimTrailingWhitespace": true
				},
				"flake8.args": [
					// Default 88, personal preference here
					"--max-line-length=110"
				],
				"isort.args": [
					"--profile",
					"black"
				],
				// Indent lines with rainbow
				"indentRainbow.indicatorStyle": "light",
				"indentRainbow.lightIndicatorStyleLineWidth": 1,
				"indentRainbow.colors": [
					"rgba(255,255,64,0.3)",
					"rgba(127,255,127,0.3)",
					"rgba(255,127,255,0.3)",
					"rgba(79,236,236,0.3)"
				],
				// The indent color if the number of spaces is not a multiple of "tabSize".
				"indentRainbow.errorColor": "rgba(128,32,32,0.6)"
			},
			"files_exlude": {
				// hide pycache folders.
				"**/__pycache__": true
			}
		}
	}
}